# Rotate log files weekly
weekly
minsize 10M

# Create new (empty) log files after rotating old ones
create 644 {{ user }} {{ user }}

# Keep log files for 8 weeks
rotate 8

# Compress old log files by default
compress 

###
# Rotate production log file
###
{{ rails_home }}/log/production.log {
    missingok
    notifempty
}

###
# Rotate delayed_job log file
###
{{ rails_home }}/log/delayed_job.log {
    missingok
    notifempty
}

###
# Rotate passenger log file
###
{{ rails_home }}/log/passenger.3000.log {
    missingok
    notifempty	
}

###
# Rotate nginx log files
###
{{ nginx_target_dir }}/logs/access.log {
    missingok
    notifempty	
}

{{ nginx_target_dir }}/logs/error.log {
    missingok
    notifempty	
}

